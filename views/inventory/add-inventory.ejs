<!-- test if title exist -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>
<!-- ---------------------------------------- -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<section id="add-inv-view" class="container form">
  <div class="container">
    <form id="addInvForm" action="/inv/manage/inv" method="post">
      <section class="container">
        <h2>Classification</h2>
        <%- classificationList %>
      </section>
      <section class="container">
        <h2>Details</h2>
        <label for="inv_make">Make</label
        ><input
          type="text"
          id="invMake"
          name="inv_make"
          placeholder="vehicle make"
          value="<%= locals.inv_make %>"
          required
        />
        <label for="inv_model">Model</label>
        <input
          type="text"
          id="invModel"
          name="inv_model"
          placeholder="vehicle model"
          value="<%= locals.inv_model %>"
          required
        />
        <label for="inv_color">Color</label>
        <input
          type="text"
          id="invColor"
          name="inv_color"
          placeholder="vehicle color"
          value="<%= locals.inv_color %>"
          required
        />
        <label for="inv_description">Description</label>
        <textarea
          name="inv_description"
          id="invDescription"
          placeholder="vehicle description"
          required
        ><%= locals.inv_description %></textarea>
      </section>
      <section class="container">
        <h2>Images</h2>
        <label for="inv_image">Image Path</label>
        <input
          type="text"
          id="invImage"
          name="inv_image"
          value="/images/vehicles/no-image.png"
          required
        />
        <label for="inv_thumbnail">Thumbnail Path</label>
        <input
          type="text"
          id="invThumbnail"
          name="inv_thumbnail"
          value="/images/vehicles/no-image.png"
          required
        />
      </section>
      <section class="container">
        <h2>Information</h2>
        <label for="inv_price">Price</label>
        <p>-increments of 100</p>
        <input
          type="number"
          id="invPrice"
          name="inv_price"
          placeholder="vehcile price"
          min="100"
          step="100"
          value="<%= locals.inv_price %>"
          required
        />
        <label for="inv_year">Year</label>
        <p>-1900 or later</p>
        <input
          type="number"
          id="invYear"
          name="inv_year"
          placeholder="vehicle year"
          min="1900"
          value="<%= locals.inv_year %>"
          step="1"
        />
        <label for="inv_miles">Miles</label>
        <p>-minimum 0</p>
        <input
          type="number"
          id="invMiles"
          name="inv_miles"
          placeholder="vehcile miles"
          min="0"
          value="<%= locals.inv_miles %>"
          required
        />
      </section>
      <section class="submit-area container">
        <button type="submit" class="btn submit-btn">Submit</button>
      </section>
    </form>
  </div>
</section>
