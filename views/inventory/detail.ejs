<%# messages() %>

<section id="details-view" class="container">
  <article class="container" id="detail-img">
    <!-- test if title exist -->
    <% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %>
    <img src="<%- d.inv_image %>" alt="<%= title %>" />
  </article>
  <article class="container">
    <h2><%= d.inv_make %> <%= d.inv_model %> Details</h2>
    <ul>
      <li id="detail-price">
        <span>Price:</span> <%- Number(d.inv_price).toLocaleString("en-US", {
        style: "currency", currency: "USD" }) %>
      </li>
      <li><span>Description:</span> <%= d.inv_description %></li>
      <li><span>Color:</span> <%= d.inv_color %></li>
      <li><span>Milage:</span> <%- d.inv_miles.toLocaleString() %></li>
    </ul>
  </article>
</section>
