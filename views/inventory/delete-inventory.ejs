<!-- test if title exist -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>
<!-- ---------------------------------------- -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<section id="delete-inv-view" class="container form">
  <div class="container">
    <form id="deleteInvForm" action="/inv/delete/" method="post">

      <section class="container">
        <h2>Details</h2>
        <label for="inv_make">Make</label
        ><input
          type="text"
          id="inv_make"
          name="inv_make"
          placeholder="vehicle make"
          value="<%= locals.inv_make %>"
          readonly
          required
        />
        <label for="inv_model">Model</label>
        <input
          type="text"
          id="inv_model"
          name="inv_model"
          placeholder="vehicle model"
          value="<%= locals.inv_model %>"
          readonly
          required
        />
        <label for="inv_price">Price</label>
        <input
          type="number"
          id="inv_price"
          name="inv_price"
          placeholder="vehcile price"
          value="<%= locals.inv_price %>"
          readonly
          required
        />
        <label for="inv_year">Year</label>
        <input
          type="number"
          id="inv_year"
          name="inv_year"
          placeholder="vehicle year"
          value="<%= locals.inv_year %>"
          readonly
          step="1"
        />
      </section>
      <section class="submit-area container">
        <p>Confirm Deletion - The delete is permanent.</p>
        <button type="submit" class="btn submit-btn">Delete Vehicle</button>
      </section>
      <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    </form>
  </div>
</section>